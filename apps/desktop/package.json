{
  "name": "noti-app",
  "version": "1.0.0",
  "description": "A personal note-taking system with Git integration",
  "type": "module",
  "main": "electron-dist/electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron:dev": "npm run electron:compile && concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:compile": "tsc --project tsconfig.electron.json && tsc --project tsconfig.preload.json",
    "electron:build": "next build && npm run electron:compile && electron-builder",
    "electron:build:win": "next build && npm run electron:compile && electron-builder --win",
    "electron:build:mac": "next build && npm run electron:compile && electron-builder --mac",
    "electron:build:linux": "next build && npm run electron:compile && electron-builder --linux"
  },
  "keywords": [
    "notes",
    "markdown",
    "git",
    "electron"
  ],
  "author": "devjasha",
  "license": "ISC",
  "build": {
    "appId": "com.noti.app",
    "productName": "Noti",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron-dist/**/*",
      "out/**/*",
      "package.json",
      "themes/**/*"
    ],
    "extraMetadata": {
      "main": "electron-dist/electron/main.js"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "public/icon.ico",
      "artifactName": "Noti-Setup.exe"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "public/icon.icns",
      "category": "public.app-category.productivity",
      "artifactName": "Noti.dmg"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "public/icon.png",
      "category": "Office",
      "artifactName": "Noti.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "devjasha",
      "repo": "Noti"
    }
  },
  "dependencies": {
    "@floating-ui/react": "^0.27.16",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-popover": "^1.1.15",
    "@tiptap/extension-code-block-lowlight": "^3.8.0",
    "@tiptap/extension-highlight": "^3.8.0",
    "@tiptap/extension-horizontal-rule": "^3.8.0",
    "@tiptap/extension-image": "^3.8.0",
    "@tiptap/extension-link": "^3.8.0",
    "@tiptap/extension-list": "^3.8.0",
    "@tiptap/extension-placeholder": "^3.8.0",
    "@tiptap/extension-subscript": "^3.8.0",
    "@tiptap/extension-superscript": "^3.8.0",
    "@tiptap/extension-table": "^3.8.0",
    "@tiptap/extension-table-cell": "^3.8.0",
    "@tiptap/extension-table-header": "^3.8.0",
    "@tiptap/extension-table-row": "^3.8.0",
    "@tiptap/extension-task-item": "^3.8.0",
    "@tiptap/extension-task-list": "^3.8.0",
    "@tiptap/extension-text-align": "^3.8.0",
    "@tiptap/extension-typography": "^3.8.0",
    "@tiptap/extensions": "^3.8.0",
    "@tiptap/pm": "^3.8.0",
    "@tiptap/react": "^3.8.0",
    "@tiptap/starter-kit": "^3.8.0",
    "@tiptap/suggestion": "^3.8.0",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.6.2",
    "gray-matter": "^4.0.3",
    "lowlight": "^3.3.0",
    "next": "^16.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0",
    "rehype-raw": "^7.0.0",
    "remark": "^15.0.1",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "remark-html": "^16.0.1",
    "simple-git": "^3.28.0",
    "tippy.js": "^6.3.7",
    "typescript": "^5.9.3",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.15",
    "@types/lodash.throttle": "^4.1.9",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.4.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "^4.0.1",
    "sass": "^1.93.2",
    "tsx": "^4.20.6",
    "wait-on": "^9.0.1"
  }
}
