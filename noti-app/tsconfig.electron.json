{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2020",
    "outDir": "./electron-dist",
    "rootDir": ".",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "strict": false
  },
  "include": [
    "electron/**/*",
    "lib/**/*"
  ],
  "exclude": [
    "electron/preload.ts",
    "node_modules",
    ".next",
    "out",
    "dist",
    "electron-dist"
  ]
}
