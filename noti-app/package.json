{
  "name": "noti-app",
  "version": "1.0.0",
  "description": "A personal note-taking system with Git integration",
  "type": "module",
  "main": "electron-dist/electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron:dev": "npm run electron:compile && concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:compile": "tsc --project tsconfig.electron.json && tsc --project tsconfig.preload.json",
    "electron:build": "next build && npm run electron:compile && electron-builder",
    "electron:build:win": "next build && npm run electron:compile && electron-builder --win",
    "electron:build:mac": "next build && npm run electron:compile && electron-builder --mac",
    "electron:build:linux": "next build && npm run electron:compile && electron-builder --linux"
  },
  "keywords": [
    "notes",
    "markdown",
    "git",
    "electron"
  ],
  "author": "devjasha",
  "license": "ISC",
  "build": {
    "appId": "com.noti.app",
    "productName": "Noti",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron-dist/**/*",
      "out/**/*",
      "package.json",
      "themes/**/*"
    ],
    "extraMetadata": {
      "main": "electron-dist/electron/main.js"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "public/icon.png",
      "category": "Office"
    },
    "publish": {
      "provider": "github",
      "owner": "devjasha",
      "repo": "Noti"
    }
  },
  "dependencies": {
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.6.2",
    "gray-matter": "^4.0.3",
    "minisearch": "^7.2.0",
    "next": "^16.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0",
    "rehype-raw": "^7.0.0",
    "remark": "^15.0.1",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "remark-html": "^16.0.1",
    "simple-git": "^3.28.0",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.15",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.4.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "^4.0.1",
    "tsx": "^4.20.6",
    "wait-on": "^9.0.1"
  }
}
